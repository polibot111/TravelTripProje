@model List<Comments>
@{
    ViewBag.Title = "BlogComment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>
<br />

<table id="example" class="table table-striped table-bordered nowrap" style="width:100%">

    <thead>
        <tr>
            <th>İsim</th>
            <th>Yorum</th>
            <th>Email</th>
            <th>ID</th>
            <th>BlogID</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Comments item in Model)
        {
            <tr>
                <td>@item.Commentator</td>
                <td style="max-width:250px;overflow:auto;">@item.CommentTor</td>
                <td>@item.Mail</td>
                <td>@item.ID</td>
                <td>@item.Blog.LayoutBlog</td>
                <td><a href="/Admin/DeleteComment/@item.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/UpdateComment/@item.ID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="#" class="btn btn-default">Detaylar</a></td>
            </tr>
        }

    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/fixedheader/3.1.8/js/dataTables.fixedHeader.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.7/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.7/js/responsive.bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        var table = $('#example').DataTable({
            responsive: true
        });

        new $.fn.dataTable.FixedHeader(table);
    });
</script>