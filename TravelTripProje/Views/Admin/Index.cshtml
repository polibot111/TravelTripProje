@model List<Blogs>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<h3 style="background:green; text-align:center;display:block; color:white;">@ViewBag.Onay</h3>
<h3><a href="/Admin/AddNewBlog/" class="btn btn-primary">Yeni Blog Ekle</a></h3>
<table id="example" class="table table-striped table-bordered nowrap" style="width:100%">

    <thead>
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Blogs item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.LayoutBlog</td>
                <td><a href="/Admin/DeleteBlog/@item.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/UpdateBlog/@item.ID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="#" class="btn btn-default">Detaylar</a></td>
            </tr>
        }

    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/fixedheader/3.1.8/js/dataTables.fixedHeader.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.7/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.7/js/responsive.bootstrap.min.js"></script>
<script>
    $(document).ready(function () {
        var table = $('#example').DataTable({
            responsive: true
        });

        new $.fn.dataTable.FixedHeader(table);
    });
</script>
