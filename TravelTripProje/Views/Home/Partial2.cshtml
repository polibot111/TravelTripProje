@model List<Blogs>
<div class="padding">
    <h4>Son Yazılmış 10 Blog</h4>
    <ul class="list list-pad">
        @{int i = 0;}
        @foreach (Blogs item in Model)
        {
        <li class="list-bg"><span>@{i++;}@i.</span><a href="/Blog/BlogDetail/@item.ID">@item.LayoutBlog</a></li>
        }
        
    </ul>
    <a href="/Blog/Index" class="link1">Tüm Blogları Gör</a>
</div>
