<!DOCTYPE HTML>
<html>
<body>

    <div class="content">
        <div class="wrap">
            <div class="about">
                <h3>Hakkımızda</h3>

                @if (Model.Count == 0)
                {
                    <img src="~/web/images/about_banner.jpg" alt="" />
                    <p>Buraya henüz açıklama girilmedi. </p>
                }
                else
                {
                    foreach (AboutUss item in Model)
                    {

                        if (item.ImageUrl == null)
                        {
                            <img src="~/web/images/about_banner.jpg" alt="" />
                        }
                        else
                        {
                            <img src="@item.ImageUrl" alt="" />
                        }
                        <p>@item.AboutDescription</p>

                    }
                }
            </div>
        </div>
    </div>
</body>
</html>


